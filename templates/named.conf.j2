options {
  listen-on port 53 { 0.0.0.0; };
  directory	"{{ zonesdir }}";
	allow-query { any; };
  recursion no;
};

{% if caching_dns is defined %}
zone "." {
	type hint;
	file "/etc/bind/named.root";
};
{% endif %}

{% for zone in zones %}
zone "{{ zone.name }}" {
  type master;
  notify no;
  file "{{ zonesdir }}/{{ zone.name }}.conf";
};
{% endfor %}
