{{ ansible_managed | comment }}
options {
  directory "{{ dns_datadir[ansible_distribution] | default(dns_datadir['default']) }}";
  dnssec-validation auto;
  auth-nxdomain no;
  listen-on { any; };
  listen-on-v6 { any; };
  allow-query { any; };
};

{% if dns_caching_dns is defined %}
zone "." {
  type hint;
  file "{{ dns_datadir[ansible_distribution] | default(dns_datadir['default']) }}/named.root";
};
{% endif %}

{% for zone in dns_zones %}
zone "{{ zone.name }}" {
  type master;
  file "{{ dns_datadir[ansible_distribution] | default(dns_datadir['default']) }}/{{ zone.name }}.conf";
};
{% endfor %}

include "{{ dns_confdir[ansible_distribution] | default(dns_confdir['default']) }}/rndc.key";

controls {
  inet 127.0.0.1 port 953
  allow { 127.0.0.1; } keys { "rndc-key"; };
};
